							<p></p>
							<p class="portfolio_section_decription_text">{{item.description}}</p>
							<p></p>
							<p class="portfolio_section_decription_price">{{item.price}}</p>
							<p></p>
						</div>
						<div class="portfolio_examples_gallery">
							<div class="slideshow-container">
								{% set length = item.images|length %}
								{% for image in item.images %}
									{% set i = i + 1 %}
									<div class="mySlides fade slide_{{i}}">
										<div class="numbertext">{{i}}/{{length}}</div>
										<div id="youtube_cont_id">
											<iframe width="100%" height="100%" src="{{image.asset_link}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen=""></iframe>
										</div>
										<div class="text">{{image.description}}</div>
									</div>
								{% endfor %}
								<!-- Next and previous buttons -->
								<a class="prev" onclick="plusSlides(-1, this.parentElement.parentElement)">&#10094;</a>
								<a class="next" onclick="plusSlides(1, this.parentElement.parentElement)">&#10095;</a>
							</div>
							<br>
							<!-- The dots/circles -->
							<div style="text-align:center">
								{% set i = 0 %}
								{% for image in item.images %}
									{% set i = i + 1 %}
									<span class="dot" onclick="currentSlide({{i}}, this.parentElement.parentElement)"></span>
								{% endfor %}
							</div>
						</div>
					</div>
					<hr style="opacity:.2">
				{% endfor %}
